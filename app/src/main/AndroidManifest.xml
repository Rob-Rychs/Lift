<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mihailistov.lift">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:label="Lift"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".Realm.RealmManager" />

        <activity
            android:name=".AddActionActivity"
            android:label="@string/title_activity_add_action"
            android:launchMode="singleTop"
            android:theme="@style/AppDialogTheme.Transparent" />

        <activity
            android:name=".AddExerciseActivity"
            android:label="@string/title_activity_add_exercise"
            android:launchMode="singleTop"
            android:theme="@style/AppDialogTheme" />
    </application>

</manifest>